    @*jquery的用法*@
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/Validform/5.3.2/Validform.min.js"></script>

    <script type="text/javascript">
        $(function () {

            var validForm = $("#LoginForm").Validform({ tiptype: 2 });//客户端的验证

            //验证码
            $('#imgVerifyCode,#kanbuq').click(function () {
                $('#imgVerifyCode').attr('src', '/home/GetVarCode?_=' + Math.random());
            });

            //鼠标变为小手
            $('#imgVerifyCode').mouseover(function () {
                $(this).css('cursor', 'pointer');
            });

            $('#imgVerifyCode').click();

            //登录
            $('#loginBtn').click(function () {

                if (validForm.check(false)) {
                    var dataForm = $('#LoginForm').serializeArray();//获取所有的表单数据
                    //往action里面发送AJAX请求
                    $.ajax({
                        url: '/home/Login',
                        type: 'post',
                        data: dataForm,
                        dataType: 'json',
                        success: function (reg) {
                            if (reg.Status == 'error') {
                                alert(reg.ErrorMsg);
                            }
                            else if (reg.Status == 'errorCode') {
                                alert(reg.ErrorMsg);
                            }
                            else if (reg.Status == 'ok') {
                                alert('登录成功');
                            }
                            else {
                                alert('登录失败');
                            }
                            $("#imgVerifyCode").click();

                        },
                        error: function () {
                            alert('服务器异常');
                            $("#imgVerifyCode").click();
                        }
                    })
                }






            });

        })
    </script>



    <!--[if IE 6]>
    <script type="text/javascript" src="http://lib.h-ui.net/DD_belatedPNG_0.0.8a-min.js" ></script>
